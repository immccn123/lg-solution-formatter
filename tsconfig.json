{
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["ES2020", "ESNext"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "baseUrl": "./",
    "noEmit": true
  },
  "exclude": ["coverage/", "node_modules/", "**/example.js"],
  "include": ["test/*.js", "packages/**/*.js"]
}
