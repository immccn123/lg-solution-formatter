{
  "name": "lg-solution-formatter",
  "description": "A formatter of the solution will be posted on Luogu OJ (based on marked)",
  "author": "Imken Luo",
  "version": "0.1.0",
  "type": "module",
  "main": "./lib/lg-solution-formatter.cjs",
  "module": "./lib/lg-solution-formatter.esm.js",
  "browser": "./lib/lg-solution-formatter.umd.js",
  "types": "./lib/lg-solution-formatter.d.ts",
  "bin": {
    "lg-solution-formatter": "bin/lg-solution-formatter.js"
  },
  "man": "./man/lg-solution-formatter.1",
  "files": [
    "bin/",
    "lib/",
    "man/",
    "lg-solution-formatter.min.js"
  ],
  "exports": {
    ".": {
      "types": "./lib/lg-solution-formatter.d.ts",
      "import": "./lib/lg-solution-formatter.esm.js",
      "default": "./lib/lg-solution-formatter.cjs"
    },
    "./bin/lg-solution-formatter": "./bin/lg-solution-formatter.js",
    "./package.json": "./package.json"
  },
  "repository": "git://github.com/immccn123/lg-solution-formatter.git",
  "homepage": "https://tj.imken.moe/",
  "bugs": {
    "url": "http://github.com/immccn123/lg-solution-formatter/issues"
  },
  "license": "MIT",
  "keywords": [
    "markdown"
  ],
  "tags": [
    "markdown"
  ],
  "devDependencies": {
    "@markedjs/html-differ": "^4.0.2",
    "@rollup/plugin-typescript": "^11.1.4",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.1.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "cheerio": "^1.0.0-rc.12",
    "commonmark": "0.30.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "front-matter": "^4.0.2",
    "highlight.js": "^11.8.0",
    "jest": "^29.7.0",
    "markdown-it": "13.0.1",
    "marked-highlight": "^2.0.6",
    "node-fetch": "^3.3.2",
    "recheck": "^4.4.5",
    "rollup": "^3.29.3",
    "semantic-release": "^22.0.1",
    "titleize": "^4.0.0",
    "ts-expect": "^1.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2",
    "uglify-js": "^3.17.4"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "build:reset": "git checkout upstream/master lib/lg-solution-formatter.cjs lib/lg-solution-formatter.umd.js lib/lg-solution-formatter.esm.js lg-solution-formatter.min.js",
    "build": "pnpm run rollup && pnpm run minify && pnpm run build:types",
    "build:types": "tsc --project tsconfig-types.json",
    "rollup": "rollup -c rollup.config.js",
    "minify": "uglifyjs lib/lg-solution-formatter.umd.js -cm  --comments /Copyright/ -o lg-solution-formatter.min.js",
    "test": "jest"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  }
}
